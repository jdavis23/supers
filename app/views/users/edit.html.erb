<% provide(:title, "Edit user") %> 
<h1>Update your profile</h1>

<div class="row-fluid">
  <div class="span12">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      
      <%= f.text_area :name %>
      
 
      <%= f.text_area :course %>

      <%= f.text_area :email %>

      <%= f.text_area :password, placeholder: "New Password" %>

      <%= f.text_area :password_confirmation, placeholder: "Confirm New Password" %>
      
      <div class="row-fluid"><h6><%= f.submit "Save Changes", class: "bigbutton" %></h6></div>

      
      
      
      
    <% end %>
    <%= link_to "Sign out", signout_path, method: "delete" %>

  </div>
</div>