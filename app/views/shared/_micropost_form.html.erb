

<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  
  <div class="field">
  
    <%= f.text_area :content, placeholder: "Course Conditions...", class: "notesarea" %>
  </div>
  
  <div class="row-fluid">
  <div class="span6">
  <h1>Cart Status: </h1>
  </div>
  <div class="span6 pull-right">
    <%= f.select(:status, [["Scatter"], ["Cart Path Only"], ["90 Degrees"], ["Roughs Only"]]) %>
  </div>
  </div>
  <div class="row-fluid">
  <div class="pull-right">
  <h6><%= f.submit "Update", class: "bigbutton" %></h6></div></div>
<% end %>

  
  
