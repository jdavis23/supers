    <%= f.text_area :content, placeholder: "Course Conditions...", class: "notesarea" %>
  </div>
  
  <div class="row-fluid">

  <div class="span6">
    <h1>Cart Status: </h1><%= f.select(:status, [["Scatter"], ["Cart Path Only"], ["90 Degrees"], ["Roughs Only"]]) %>
  </div>
    <div class="span6">
      <div class="pull-right">
  <h6><%= f.submit "Update", class: "bigbutton" %></h6></div>
  </div>
  </div>
  
<% end %>

  
  
